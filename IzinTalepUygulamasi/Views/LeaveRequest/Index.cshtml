@using IzinTalepUygulamasi.Models.ViewModels
@model List<LeaveRequest>

@{
    var currentFilter = ViewBag.StatusFilter ?? "";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Talep Oluştur</a>
</p>

<div class="mb-3">
    <a asp-action="Index" asp-route-statusFilter="" class="btn @(string.IsNullOrEmpty(currentFilter) ? "btn-success" : "btn-outline-secondary")">Tümü</a>
    <a asp-action="Index" asp-route-statusFilter="PENDING" class="btn @(currentFilter == "PENDING" ? "btn-success" : "btn-outline-secondary")">Beklemede</a>
    <a asp-action="Index" asp-route-statusFilter="APPROVED" class="btn @(currentFilter == "APPROVED" ? "btn-success" : "btn-outline-secondary")">Onaylananlar</a>
    <a asp-action="Index" asp-route-statusFilter="REJECTED" class="btn @(currentFilter == "REJECTED" ? "btn-success" : "btn-outline-secondary")">Reddedilenler</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Talep Tarihi</th>
            <th>İzin Türü</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leaveRequest in Model)
        {
            <tr>
                <td>@leaveRequest.RequestDate.ToShortDateString()</td>
                <td>@leaveRequest.LeaveType</td>
                <td>@leaveRequest.StartDate.ToShortDateString()</td>
                <td>@leaveRequest.EndDate.ToShortDateString()</td>
                <td>
                    @if (leaveRequest.Status == RequestStatus.PENDING)
                    {
                        <span class="badge bg-warning text-dark">Beklemede</span>
                    }
                    else if (leaveRequest.Status == RequestStatus.APPROVED)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Reddedildi</span>
                    }
                </td>
                <td>
                    @if (leaveRequest.Status == RequestStatus.PENDING)
                    {
                        <a asp-action="Edit" asp-route-id="@leaveRequest.Id" class="btn btn-sm btn-info">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@leaveRequest.Id" class="btn btn-sm btn-danger">Sil</a>
                    }
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Gösterilecek izin talebi bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>