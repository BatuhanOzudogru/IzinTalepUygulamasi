@using IzinTalepUygulamasi.Models.ViewModels
@model LeaveRequestCreateViewModel

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">

            <div class="mb-3">
                <label asp-for="LeaveType" class="control-label">İzin Türü</label>
                <select asp-for="LeaveType" asp-items="Html.GetEnumSelectList<LeaveType>()" class="form-control"></select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartDate" class="control-label">İzin Başlangıç Tarihi</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="control-label">İzin Bitş Tarihi</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Reason" class="control-label">Açıklama</label>
                <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Talebi Güncelle" class="btn btn-primary" />
                <a asp-controller="LeaveRequest" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}