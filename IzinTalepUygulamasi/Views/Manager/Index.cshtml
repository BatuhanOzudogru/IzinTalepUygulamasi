@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<IzinTalepUygulamasi.Models.ViewModels.LeaveRequestViewModel>

<h1>Onay Bekleyen İzin Talepleri</h1>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Bu Ay Onaylanan İzin</div>
            <div class="card-body">
                <h5 class="card-title display-4">@ViewBag.ApprovedThisMonth</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-dark bg-warning mb-3">
            <div class="card-header">Bekleyen Toplam Talep</div>
            <div class="card-body">
                <h5 class="card-title display-4">@ViewBag.PendingRequestsCount</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">En Popüler İzin Türü (Onaylı)</div>
            <div class="card-body">
                <h5 class="card-title display-4">@ViewBag.MostUsedLeaveType</h5>
            </div>
        </div>
    </div>
</div>

<hr />

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Çalışan Adı / Kullanıcı Adı Ara..." />
    </div>
    <div class="col-md-3">
        <select name="leaveTypeFilter" class="form-select" asp-items="Html.GetEnumSelectList<LeaveType>()">
            <option value="">Tüm İzin Türleri</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="date" name="startDateFilter" value="@ViewBag.StartDateFilter" class="form-control" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrele</button>
        <a asp-action="Index" class="btn btn-secondary">Temizle</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Onay bekleyen herhangi bir izin talebi bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Çalışan Adı</th>
                <th>Talep Tarihi</th>
                <th>İzin Türü</th>
                <th>Başlangıç - Bitiş Tarihi</th>
                <th>İzin Süresi (Gün)</th>
                <th>Açıklama</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeFullName)</td>
                    <td>@item.RequestDate.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.LeaveType)</td>
                    <td>@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.NumberOfDays)</td>
                    <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">İncele</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", 
            new { page, 
                  search = ViewBag.Search, 
                  leaveTypeFilter = ViewBag.LeaveTypeFilter, 
                  startDateFilter = ViewBag.StartDateFilter }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
    </div>
    <div>
        Sayfa @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var selectedValue = '@(ViewBag.LeaveTypeFilter ?? "")';
        var select = document.querySelector('select[name="leaveTypeFilter"]');
        if (selectedValue && select) {
            select.value = selectedValue;
        }
    });
</script>